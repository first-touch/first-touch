.full.top-padded
  .container-fluid
    .row
      .col-sm-12
        .row
          .logo
            = image_tag 'landing-page/ft-logo.png'
        .row
          .col-sm-6.col-lg-2.col-lg-offset-5.col-sm-offset-3
            %h2 Register
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              = devise_error_messages!
              .field
                = f.label :email, class: 'sr-only'
                %br/
                = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email Adress'
                %br/
              .field
                = f.label :password, class: 'sr-only'
                = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password'
                - if @minimum_password_length
                  %em
                    (#{@minimum_password_length} characters minimum)
              .field
                = f.label :password_confirmation, class: 'sr-only'
                = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Password Confirmation'
              .actions
                = f.submit "Sign up", class: 'bar-button'
            = render "devise/shared/links"