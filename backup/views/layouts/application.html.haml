//This is the layout used for logged in users
!!! 5
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    = favicon_link_tag 'favicon.png', type: 'image/png'
    %title= content_for?(:title) ? yield(:title) : "First Touch"

    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag

  %body
    .container-fluid
      .row
        .col-md-2
          .box#left-sidebar

        .col-md-8
          .row
            .col-md-12
              #search-bar
          .row
            .col-md-12#app-wrapper-content

        .col-md-2#right-sidebar
          .row
            .col-md-12
              %ul.navbar-horizontal
                %li.nav-item
                  %a.nav-link{href: '#about'} About
                %li.nav-item
                  = link_to "Log Out", destroy_user_session_path, method: :delete, class: 'nav-link'
          .row
            .col-md-12#secondary-navigation
    = yield

    #app
    = javascript_include_tag "bundle"

    //= yield
