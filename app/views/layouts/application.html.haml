%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    = favicon_link_tag 'favicon.png', type: 'image/png'
    %title= content_for?(:title) ? yield(:title) : "First Touch"

    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag

  %body
    .container-fluid
      .row
        .col-2
          .box#left-sidebar
            .row
              .col-12
                #top-logo
                  = image_tag 'ft_logo.png'
            .row
              .col-12
                #user-identifier
                  .user.demo
                  .user-name Cristiano Ronaldo
                  #current-status Football player
                  #current-club Real Madrid
            .row
              .col-12
                %ul.navbar-vertical
                  %li.nav-item
                    %a.nav-link{href: '#'} Home
                  %li.nav-item
                    %a.nav-link{href: '#profile'} Profile
                  %li.nav-item
                    %a.nav-link{href: '#myclub'} My Club
                  %li.nav-item
                    %a.nav-link{href: '#network'} Network
                  %li.nav-item
                    %a.nav-link{href: '#messages'} Messages
                  %li.nav-item
                    %a.nav-link{href: '#interests'} Interests
        .col-8
          .box#center-content
            .row
              .col-12
                #search-bar
            .row
              .col-12#app-wrapper-content

        .col-2
          .box#right-sidebar
            .row
              .col-12#secondary-navigation
                %ul.navbar-horizontal
                  %li.nav-item
                    %a.nav-link{href: '#about'} About
                  %li.nav-item
                    = link_to "Log Out", destroy_user_session_path, method: :delete, class: 'nav-link'
            .row
              .col-12#notifications-feed
            .row
              .col-12#events-feed

    = yield
